{
  "id": "login-module",
  "name": "login",
  "provides": [
    {
      "id": "login",
      "version": "0.1",
      "handlers" : [
        {
          "methods" : [ "POST" ],
          "pathPattern" : "/authn/login",
          "modulePermissions" : [ "auth.signtoken" ]
        },
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/authn/credentials",
          "permissionsRequired" : [ "login.readUser" ]
        },
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/authn/credentials/{id}",
          "permissionsRequired" : [ "login.readUser" ]
        },
        {
          "methods" : [ "POST" ],
          "pathPattern" : "/authn/credentials",
          "permissionsRequired" : [ "login.addUser" ]
        },
        {
          "methods" : [ "PUT" ],
          "pathPattern" : "/authn/credentials",
          "permissionsRequired" : [ "login.modifyUser" ]
        },
        {
          "methods" : [ "DELETE" ],
          "pathPattern" : "/authn/credentials",
          "permissionsRequired" : [ "login.removeUser" ]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType" : "system",
      "handlers" : [
        {
          "methods" : [ "POST" ],
          "pathPattern" : "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets" : [
    {
      "permissionName" : "login.readUser",
      "displayName" : "login read user",
      "description" : "Read Login Info"
    },
    {
      "permissionName" : "login.addUser",
      "displayName" : "login add user",
      "description" : "Add New Login"
    },
    {
      "permissionName" : "login.modifyUser",
      "displayName" : "login modify user",
      "description" : "Modify login info"
    },
    {
      "permissionName" : "login.removeUser",
      "displayName" : "login remove user",
      "description" : "Remove existing login credentials"
    },
    {
      "permissionName" : "login",
      "displayName" : "login credentials",
      "description" : "All permissions for login credentials",
      "subPermissions" : [
        "login.readUser",
        "login.addUser",
        "login.modifyUser",
        "login.removeUser"
      ]
    }
  ]
 }
