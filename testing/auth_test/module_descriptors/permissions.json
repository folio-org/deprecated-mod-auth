{
  "id": "permissions-module",
  "name": "permissions",
  "provides": [
    {
      "id": "permissions",
      "version": "0.0.1",
      "handlers" : [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/perms/users*",
          "level": "30",
          "type": "request-response",
          "permissionsRequired": [
            "perms.users.create"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/perms/users*",
          "level": "30",
          "type": "request-response",
          "permissionsDesired": [
            "perms.users.read"
          ]
        },
        {
          "methods": [
            "PUT"
          ],
          "pathPattern": "/perms/users/{id}",
          "level": "30",
          "type": "request-response",
          "permissionsRequired": [
            "perms.users.modify"
          ]
        },

        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/perms/users/{id}",
          "level": "30",
          "type": "request-response",
          "permissionsRequired": [
            "perms.users.delete"
          ]
        },
        {
          "methods": [
            "GET"
          ],
          "pathPattern": "/perms/permissions",
          "level": "30",
          "type": "request-response",
          "permissionsRequired": [
            "perms.permissions.read"
          ]
        },
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/perms/permissions",
          "level": "30",
          "type": "request-response",
          "permissionsRequired": [
            "perms.permissions.create"
          ]
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/perms/permissions/{id}",
          "level": "30",
          "type": "request-response",
          "permissionsRequired": [
            "perms.permissions.delete "
          ]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0.0",
      "interfaceType" : "system",
      "handlers" : [
        {
          "methods" : [ "POST", "DELETE" ],
          "pathPattern" : "/_/tenant"
        }
      ]
    },
    {
      "id" : "_tenantPermissions",
      "version" : "1.0.0",
      "interfaceType" : "system",
      "handlers" : [
        {
          "methods" : [ "POST" ],
          "pathPattern" : "/_/tenantpermissions"
        }
      ]
    }
  ],
  "permissionSets" : [
    {
      "permissionName" : "perms.users.create",
      "displayName" : "permission users create",
      "description" : "Create permissions user"
    },
    {
      "permissionName" : "perms.users.read",
      "displayName" : "permission users read",
      "description" : "Read permissions user data"
    },
    {
      "permissionName" : "perms.users.modify",
      "displayName" : "permission users modify",
      "description" : "Modify permissions user data"
    }, 
    {
      "permissionName" : "perms.users.delete",
      "displayName" : "permission users delete",
      "description" : "Remove permissions users"
    }, 
    {
      "permissionName" : "perms.permissions.create",
      "displayName" : "permission create",
      "description" : "Create new permissions"
    }, 
    {
      "permissionName" : "perms.permissions.read",
      "displayName" : "permission read",
      "description" : "Read permissions data"
    }, 
    {
      "permissionName" : "perm.permissions.modify",
      "displayName" : "permission modify",
      "description" : "Modify permission data"
    }, 
    {
      "permissionName" : "perm.permissions.delete",
      "displayName" : "permission delete",
      "description" : "Remove permissions"
    }

  ]
}
